{
  "plugins": ["@typescript-eslint"],
  "extends": ["airbnb-typescript", "airbnb-typescript", "plugin:@typescript-eslint/recommended", "prettier"],
  "env": {
    "browser": true,
    "es6": true
  },
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["warn", 2],
    "comma-dangle": "off",
    "no-var-requires": false
  }
}
